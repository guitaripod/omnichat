{
  "name": "omnichat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "pages:build": "npx @cloudflare/next-on-pages@latest",
    "pages:deploy": "npm run pages:build && wrangler pages deploy",
    "wrangler": "wrangler",
    "preview": "npm run pages:build && wrangler pages dev",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply omnichat-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply omnichat-db",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.21.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "html2canvas": "^1.4.1",
    "katex": "^0.16.22",
    "lucide-react": "^0.513.0",
    "nanoid": "^5.1.5",
    "next": "15.3.3",
    "pdfjs-dist": "^5.3.31",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "shiki": "^3.6.0",
    "tailwind-merge": "^3.3.0",
    "use-debounce": "^10.0.5",
    "zod": "^3.25.56",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@cloudflare/vitest-pool-workers": "^0.8.36",
    "@cloudflare/workers-types": "^4.20250607.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^17.6.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "miniflare": "^4.20250525.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vercel": "^42.3.0",
    "vitest": "^3.1.0",
    "wrangler": "^4.19.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
